<div class="container mt-4">
  <h1>Quản lý câu hỏi</h1>
  <div class="mb-4">
    <form action="/admin/questions/add" method="POST" class="row g-3">
      <div class="col-md-6">
        <input type="text" name="question" class="form-control" placeholder="Nhập nội dung câu hỏi" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="optionA" class="form-control" placeholder="Đáp án A" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="optionB" class="form-control" placeholder="Đáp án B" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="optionC" class="form-control" placeholder="Đáp án C" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="optionD" class="form-control" placeholder="Đáp án D" required>
      </div>
      <div class="col-md-2">
        <select name="correct" class="form-select" required>
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="C">C</option>
          <option value="D">D</option>
        </select>
      </div>
      <div class="col-md-12 mt-2">
        <input type="text" name="explanation" class="form-control" placeholder="Giải thích đáp án" required>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">Thêm câu hỏi</button>
      </div>
    </form>
  </div>
  <hr>
  <h2 class="mt-4">Danh sách câu hỏi</h2>
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>#</th>
        <th>Nội dung</th>
        <th>A</th>
        <th>B</th>
        <th>C</th>
        <th>D</th>
        <th>Đáp án đúng</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#each questions}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.question}}</td>
        <td>{{this.options.[0]}}</td>
        <td>{{this.options.[1]}}</td>
        <td>{{this.options.[2]}}</td>
        <td>{{this.options.[3]}}</td>
        <td>{{this.options.[this.correct_answer]}}</td>
        <td>
          <a href="/admin/questions/edit/{{this.id}}" class="btn btn-sm btn-primary">Sửa</a>
          <form action="/admin/questions/delete/{{this.id}}" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
 