<div class="container mt-4">
    <h1 class="text-center mb-4">Mô phỏng Điều chế Tín hiệu Số</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tham số mô phỏng</h5>
                    <form id="simulationForm">
                        <div class="mb-3">
                            <label for="modulationType" class="form-label">Loại điều chế</label>
                            <select class="form-select" id="modulationType" name="modulationType">
                                <option value="AM">Điều chế biên độ (AM)</option>
                                <option value="FM">Điều chế tần số (FM)</option>
                                <option value="PSK">Điều chế pha (PSK)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="carrierFreq" class="form-label">Tần số sóng mang (Hz)</label>
                            <input type="number" class="form-control" id="carrierFreq" name="carrierFreq" value="10" min="1" max="100">
                        </div>
                        <div class="mb-3">
                            <label for="messageFreq" class="form-label">Tần số tín hiệu (Hz)</label>
                            <input type="number" class="form-control" id="messageFreq" name="messageFreq" value="2" min="0.1" max="10" step="0.1">
                        </div>
                        <div class="mb-3">
                            <label for="amplitude" class="form-label">Biên độ (A<sub>c</sub>)</label>
                            <input type="number" class="form-control" id="amplitude" name="amplitude" value="1" min="0.1" max="5" step="0.1">
                        </div>
                        <div class="mb-3" id="pskBitGroup" style="display:none;">
                            <label for="pskBits" class="form-label">Dãy bit PSK (0/1, cách nhau dấu phẩy)</label>
                            <input type="text" class="form-control" id="pskBits" name="pskBits" value="1,0,1,1,0,0,1,0">
                        </div>
                        <button type="button" class="btn btn-primary w-100" id="startSimBtn">Bắt đầu mô phỏng</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Khung hiển thị tín hiệu</h5>
                    <canvas id="simulation-canvas" width="700" height="300" style="border:1.5px solid #6366f1; border-radius:8px; background:#f8fafc;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/script.js"></script>
<script src="/js/simulations.js"></script>
<script>
  window.currentUserId = "{{user.id}}";
  window.currentUserRole = "{{user.role}}";
</script>
