{{> header}}

<div class="container mt-4">
    <h1 class="text-center mb-4">Digital Communication Quiz</h1>
    
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="quizForm">
                        {{#each questions}}
                        <div class="question-container mb-4" data-question-id="{{id}}">
                            <h5 class="question-text">{{question}}</h5>
                            <div class="options">
                                {{#each options}}
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" 
                                           name="answer{{../id}}" 
                                           id="q{{../id}}_option{{@index}}" 
                                           value="{{@index}}">
                                    <label class="form-check-label" for="q{{../id}}_option{{@index}}">
                                        {{this}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                            <div class="feedback mt-2" style="display: none;">
                                <div class="alert alert-info">
                                    <strong>Explanation:</strong> {{explanation}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Submit Quiz</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('quizForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target);
    const answers = {};
    
    // Collect all answers
    for (let [key, value] of formData.entries()) {
        if (key.startsWith('answer')) {
            const questionId = key.replace('answer', '');
            answers[questionId] = value;
        }
    }
    
    try {
        const response = await fetch('/quiz/submit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(answers)
        });
        
        const result = await response.json();
        
        // Show feedback for each question
        result.feedback.forEach(feedback => {
            const questionContainer = document.querySelector(`[data-question-id="${feedback.questionId}"]`);
            const feedbackDiv = questionContainer.querySelector('.feedback');
            const options = questionContainer.querySelectorAll('.form-check-input');
            
            // Disable all options
            options.forEach(option => option.disabled = true);
            
            // Highlight correct answer
            const correctOption = questionContainer.querySelector(`input[value="${feedback.correctAnswer}"]`);
            correctOption.parentElement.classList.add('text-success');
            
            // Show feedback
            feedbackDiv.style.display = 'block';
        });
        
        // Show final score
        const scoreAlert = document.createElement('div');
        scoreAlert.className = 'alert alert-success text-center mt-3';
        scoreAlert.innerHTML = `
            <h4>Quiz Completed!</h4>
            <p>Your score: ${result.score}/${result.total}</p>
            <p>Percentage: ${Math.round((result.score/result.total) * 100)}%</p>
        `;
        e.target.insertBefore(scoreAlert, e.target.firstChild);
        
        // Disable submit button
        e.target.querySelector('button[type="submit"]').disabled = true;
        
    } catch (error) {
        console.error('Error:', error);
        alert('An error occurred while submitting the quiz');
    }
});
</script>

<style>
.question-container {
    padding: 20px;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    margin-bottom: 20px;
}

.question-text {
    color: #2c3e50;
    margin-bottom: 15px;
}

.form-check-label {
    cursor: pointer;
}

.text-success {
    color: #28a745 !important;
    font-weight: bold;
}

.feedback {
    margin-top: 10px;
    padding: 10px;
    border-radius: 5px;
}
</style>

{{> footer}} 